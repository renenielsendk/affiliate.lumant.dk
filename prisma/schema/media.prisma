model Media {
  id                         String                      @id @default(auto()) @map("_id") @db.ObjectId
  createdAt                  DateTime                    @default(now())
  updatedAt                  DateTime                    @updatedAt
  url                        String
  contentType                String
  fileName                   String
  size                       Int
  duration                   Int?
  cdnMediaId                 String?
  cdnMediaStatus             String?
  lections                   CourseLection[]             @relation("CourseLectionMedia")
  courseLectionThumbnails    CourseLection[]             @relation("CourseLectionThumbnail")
  instructor                 Instructor                  @relation("InstructorMedia", fields: [instructorId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  instructorId               String                      @db.ObjectId
  courseImages               Course[]                    @relation("CourseImageMedia")
  coursePreviews             Course[]                    @relation("CourseImagePreview")
  instructorProfileImages    Instructor[]                @relation("InstructorProfileImage")
  instructorProfilevideos    Instructor[]                @relation("InstructorProfileVideo")
  themeLogos                 Theme[]                     @relation("ThemeLogo")
  themeFavicons              Theme[]                     @relation("ThemeFavicon")
  membershipClubContentPages MembershipClubContentPage[] @relation("MembershipClubContentPageBannerMedia")
  membershipClubBanners      MembershipClub[]            @relation("MembershipClubBannerMedia")

  @@map("media")
}
