model Review {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  dateOfReview DateTime
  userName     String
  userTagLine  String?
  userEmail    String?
  comment      String?
  rating       Float
  instructor   Instructor @relation(fields: [instructorId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  instructorId String     @db.ObjectId
  approved     Boolean    @default(false)
  imageMedia   Media?     @relation("ReviewImage", fields: [imageMediaId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  imageMediaId String?    @db.ObjectId
  videoMedia   Media?     @relation("ReviewVideo", fields: [videoMediaId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  videoMediaId String?    @db.ObjectId

  @@map("reviews-v2")
}
